{
	"name": "@natlibfi/melinda-rest-api-commons",
	"description": "Shared modules for microservices of Melinda record link migration system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/NatLibFi/melinda-record-link-migration-commons",
	"bugs": {
		"url": "https://github.com/NatLibFi/melinda-record-link-migration-commons/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:NatLibFi/melinda-record-link-migration-commons.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": "^12"
	},
	"private": true,
	"scripts": {
		"prepare": "npm run build",
		"lint": "eslint ./src",
		"lint:dev": "eslint ./src --fix",
		"check-deps": "npm-check;exit 0",
		"test": "npm run lint:dev",
		"dev": "NODE_ENV=development cross-env DEBUG=1 nodemon",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.1",
		"@natlibfi/marc-record-serializers": "^5.0.1",
		"@natlibfi/melinda-commons": "^7.2.1",
		"amqplib": ">=0.5.5 <1.0.0",
		"moment": "^2.24.0",
		"mongodb": "^3.5.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.4",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"babel-eslint": "^10.0.3",
		"babel-plugin-dynamic-import-node": "^2.3.0",
		"cross-env": "^7.0.0",
		"eslint": "^6.8.0",
		"@natlibfi/eslint-config-melinda-backend": ">1.0.0-alpha.1",
		"eslint-plugin-import": "^2.20.1",
		"nodemon": "^2.0.2",
		"npm-check": "^5.9.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"plugins": [
			"@babel/plugin-syntax-dynamic-import",
			"dynamic-import-node"
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nodemonConfig": {
		"exec": "npm run lint:dev && npm test",
		"watch": [
			"src/*"
		],
		"ext": "js",
		"delay": 2.5
	}
}
